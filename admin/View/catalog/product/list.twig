{% extends "layout.twig" %}


{% block head %}{% endblock %}

{% block body %}
    {% embed 'blocks/app-content.twig' %}
        {% block breadcrumb %}
            {% for item in LANGUAGE.catalog.product.edit.breadcrumb %}
                <li class="breadcrumb-item"><a href="#">{{ item }}</a></li>
            {% endfor %}
        {% endblock %}
        {% block header_title %}{{ parent() }}{% endblock %}
        {% block content_header_right %}
            <div id="content-header-btn-group" class="btn-group float-md-right" role="group" aria-label="Button group with nested dropdown">
                <div  class="btn-group" role="group">
                    <button class="btn btn-outline-primary dropdown-toggle dropdown-menu-right" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-language icon-left"></i> Language</button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" x-placement="bottom-start">
                        {% for item in language %}
                            <a class="dropdown-item" href="#" data-a-target="lang" data-lang="{{ item.postfix }}">{{ item.name }}</a>
                        {% endfor %}
                    </div>
                </div>
                <a href="#" data-a-target="product-add" class="btn btn-outline-primary"><i class="fa fa-plus"></i></a>
            </div>
        {% endblock %}
        {% block content_body %}
            <table id="catalog-product-list" class="table table-striped table-bordered responsive dataTable dtr-inline" role="grid">
                <thead>
                <tr role="row">
                    <th class="" data-name="image" tabindex="0"  rowspan="1" colspan="1"  style="width: 1%;"></th>
                    <th class="" data-name="title" tabindex="0"  rowspan="1" colspan="1"  style="width: auto;">{{ translate('catalog', 'product_list_title') }}</th>
                    <th class="" data-name="create_at" tabindex="0"  rowspan="1" colspan="1"  style="width: 1%;">{{ translate('catalog', 'product_list_create_at') }}</th>
                    <th class="" data-name="price" tabindex="0"  rowspan="1" colspan="1"  style="width: 1%;">{{ translate('catalog', 'product_list_price') }}</th>
                    <th class="" data-name="options" tabindex="0"  rowspan="1" colspan="1"  style="width: 1%;">{{ translate('catalog', 'product_list_options') }}</th>
                </tr>
                </thead>
                <tbody>

                </tbody>
                <tfoot>

                </tfoot>
            </table>
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block css_bottom %}{% endblock %}
{% block script_bottom %}
    <script src="/admin/app-assets/vendors/js/tables/jquery.dataTables.min.js"></script>
    <script src="/admin/app-assets/vendors/js/tables/datatable/dataTables.bootstrap4.min.js"></script>
    <script src="/admin/app-assets/vendors/js/tables/datatable/dataTables.select.min.js"></script>
    <script src="/admin/app-assets/vendors/js/tables/datatable/dataTables.keyTable.min.js"></script>
    <script src="/admin/app-assets/vendors/js/tables/datatable/buttons.bootstrap4.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/admin/app-assets/vendors/css/tables/datatable/dataTables.bootstrap4.min.css">

    <script type="text/javascript" src="/admin/JsController/catalog/product/ProductController.js"></script>
    <script src="/admin/assets/js/customized/catalog.product.list.js"></script>
{% endblock %}